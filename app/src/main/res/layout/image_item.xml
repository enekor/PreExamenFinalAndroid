              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:gravity="center|start" android:id="@+id/layout">

    <ImageView
            android:layout_width="92dp"
            android:layout_height="83dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imagen"/>
